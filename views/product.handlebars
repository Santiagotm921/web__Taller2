<div class="content" style="background: {{background}}">

    <section class="content__shoe">
        <img src="{{ img }}" alt="imageShoe">
    </section>

    <article class="content__titles">
        <span>
            <h4> {{price}}$</h4>
            <img src="{{imgrating2}}" alt="rating">
        </span>
        <h1> {{ name }}</h1>
        <h3> {{subtitle}} </h3>
        <p> {{description}}</p>

        <button class="screen__btn" style="
        border: 3px solid white; 
        border-radius: 25px; 
        background: none; 
        color: white; 
        width: 180px;
        height: auto;"
        data-img="{{ img }}" data-name="{{ name }}" data-price="{{ price }}" data-id="{{ _id }}">

            <div class="content__mybtn">
                Add to cart
                <img src="/images/cart.png" alt="">
            </div>


        </button>

    </article>

</div>