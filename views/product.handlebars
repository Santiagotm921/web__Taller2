<div class="content" style="background: {{background}}">

    <section class="content__shoe">
        <img src="{{ img }}" alt="imageShoe">
    </section>

    <article class="content__titles">
        <span>
            <h4> {{price}}$</h4>
            <img src="{{imgrating2}}" alt="rating">
        </span>
        <h1> {{ name }}</h1>
        <h3> {{subtitle}} </h3>
        <p> {{description}}</p>

        <button class="content__btn">
            <div class="content__mybtn">
                Add to cart
                <img src="/images/cart.png" alt="">
            </div>
            
        </button>

    </article>

</div>